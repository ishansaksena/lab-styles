<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="@android:style/Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <!--TextView style-->
    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?android:colorPrimary</item>
    </style>

    <!--Bold TextView-->
    <style name="Label" parent="@style/TextStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <!--Gold TextView-->
    <style name="Gold" parent="@style/TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">?android:colorPrimary</item>
    </style>

    <!--Button style-->
    <style name="MyButton" parent="@android:style/MediaButton">
        <item name="android:textSize">22sp</item>
    </style>
</resources>
